<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
  
    <div class="d-flex align-items-center">
      <% if (username) { %>
        <span class="mr-3">Logged in as <strong><%= username %></strong></span>
        <form method="POST" action="/logout" class="form-inline">
          <button type="submit" class="btn btn-danger btn-sm">Logout</button>
        </form>
      <% } else { %>
        <form method="POST" action="/login" class="form-inline">
          <input type="text" name="username" class="form-control mr-2" placeholder="Username" required />
          <button type="submit" class="btn btn-primary btn-sm">Login</button>
        </form>
      <% } %>
    </div>
  </nav>
</header>
