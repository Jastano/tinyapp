<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
  
    <div class="d-flex align-items-center">
      <% if (user) { %>
        <span class="mr-3">Logged in as <strong><%= user.email %></strong></span>
        <form method="POST" action="/logout" class="form-inline">
          <button type="submit" class="btn btn-danger btn-sm">Logout</button>
        </form>
      <% } else { %>
        <a href="/register" class="btn btn-outline-light btn-sm mr-2">Register</a>
        <a href="/login" class="btn btn-outline-light btn-sm">Login</a>
      <% } %>
    </div>
  </nav>
</header>
